<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_shape">


    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/container"
        android:id="@+id/editContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/aboveBtn"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_shape"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/belowBtn"
            android:background="@drawable/btn_shape"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:id="@+id/editTextLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set your Stock Limit"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeContainer"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/editContainer"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_below="@+id/editContainer"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:id="@+id/editTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set Update Interval"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"/>

    </LinearLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/timeContainer"
        android:padding="8dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/SetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Settings" />


</RelativeLayout>
